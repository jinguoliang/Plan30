<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/layoutHead"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px650"
        android:background="@color/blue_light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingBottom="@dimen/px15"
            android:paddingLeft="@dimen/px35"
            android:text="@string/main_home"
            android:textColor="@android:color/black"
            android:textSize="@dimen/px150" />

    </FrameLayout>

    <ListView
        android:id="@+id/lvPlanList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layoutHead"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"></ListView>

    <com.rey.material.widget.FloatingActionButton
        android:id="@+id/btnNewPlan"
        style="@style/FloatingActionButton"
        android:layout_width="160px"
        android:layout_height="160px"
        android:layout_alignParentRight="true"
        android:layout_below="@id/layoutHead"
        android:layout_marginRight="50px"
        android:layout_marginTop="-100px" />

    <com.rey.material.widget.Button
        style="@style/FlatWaveColorButtonRippleStyle"
        android:id="@+id/action_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignLeft="@id/btnNewPlan"
        android:layout_alignRight="@id/btnNewPlan"
        android:textColor="#FF000000"
        android:layout_marginTop="5dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
        android:text="@string/settings"/>


</RelativeLayout>
