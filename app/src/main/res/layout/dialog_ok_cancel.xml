<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" >

    <LinearLayout
        android:layout_width="@dimen/px778"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px50"
            android:text="温馨提示"
            android:textColor="@color/black2"
            android:textSize="@dimen/px44" />

        <TextView
            android:id="@+id/dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px50"
            android:layout_marginTop="@dimen/px30"
            android:text="您确定退出被窝阅读吗？"
            android:textColor="@color/black2"
            android:textSize="@dimen/px34" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:layout_marginTop="@dimen/px30"
            android:background="@color/gray2" />

        <LinearLayout
            android:id="@+id/layout_dialog_buttons"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px150"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dialog_left_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_left_button_bg"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/blue1"
                android:textSize="@dimen/px50" />

            <View
                android:id="@+id/vertical_line"
                android:layout_width="@dimen/px1"
                android:layout_height="match_parent"
                android:background="@color/gray2" />

            <TextView
                android:id="@+id/dialog_right_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_right_button_bg"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/blue1"
                android:textSize="@dimen/px50" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>